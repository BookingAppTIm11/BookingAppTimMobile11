<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Accommodation name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#FF5722"
                android:ems="10"
                android:hint="Accommodation name"
                android:inputType="text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/description"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#FF5722"
                android:ems="10"
                android:hint="Description"
                android:inputType="text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/location"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#FF5722"
                android:ems="10"
                android:hint="Location"
                android:inputType="text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Minimum guests"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/minGuests"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#FF5722"
                android:ems="10"
                android:hint="Minimum guests"
                android:inputType="text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Maximum guests"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/maxGuests"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#FF5722"
                android:ems="10"
                android:hint="Maximum guests"
                android:inputType="text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Default price"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/defaultPrice"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#FF5722"
                android:ems="10"
                android:hint="Default price"
                android:inputType="text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Price type"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/perNight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Per night"
                        android:backgroundTint="@color/light_orange"/>

                    <RadioButton
                        android:id="@+id/perUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Per unit"
                        android:backgroundTint="@color/light_orange"/>
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:contentDescription="Cancelation days"
                android:text="Cancelation days"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/cancelationDays"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#FF5722"
                android:ems="10"
                android:hint="Cancelation days"
                android:inputType="text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Accommodation type"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/accommodationType"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginBottom="25dp"
                android:backgroundTint="#FF5722" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Amenities"
                android:textSize="16sp" />

            <TableLayout
                android:id="@+id/amenitiesTable"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:background="@drawable/table_border"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="ID"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Name"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>

            <Spinner
                android:id="@+id/amenities"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp" />

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addAmenity"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_orange"
                    android:text="Add" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/clearAmenities"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_orange"
                    android:text="Clear" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:text="Availability"
                android:textSize="16sp" />

            <TableLayout
                android:id="@+id/availabilityTable"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:background="@drawable/table_border"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="From"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="To"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:id="@+id/availabilityInputs"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp">


                <EditText
                    android:id="@+id/availabilityStart"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Start date"
                    android:inputType="date" />


                <EditText
                    android:id="@+id/availabilityEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="End date"
                    android:inputType="date" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addAvailability"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_orange"
                    android:text="Add" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/clearAvailabilities"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_orange"
                    android:text="Clear" />

            </LinearLayout>


            <TextView
                android:id="@+id/textView35"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:text="Prices"
                android:textSize="16sp" />

            <TableLayout
                android:id="@+id/priceTable"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:background="@drawable/table_border"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="From"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="To"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Price"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp">


                <EditText
                    android:id="@+id/pricesStart"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Start date"
                    android:inputType="date" />


                <EditText
                    android:id="@+id/pricesEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="End date"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/price"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Price"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addPrice"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_orange"
                    android:text="Add" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/clearPrices"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_orange"
                    android:text="Clear" />

            </LinearLayout>

            <Button
                android:id="@+id/createAccommodation"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:backgroundTint="#FF5722"
                android:text="Create accommodation" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
