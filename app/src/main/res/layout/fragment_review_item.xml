<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#344157"
            android:text="guest@gmail.com"
            android:textColor="@color/blue_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/baseline_star_24" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/blue_text"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Review wajioiasgjiasgjiasjigasijgasigiasgji ijagsijsajig
asiogjiasjgjiasgjiasgjiasgjiasgjiasjigjiasgjiasgjiasgjijigsji"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reviewDate"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:text="Reviewed on: 11.14.2024."
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/reportIcon"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_report" />

            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_trashcan" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>